<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UltraFlowLayout">
        <!--子View的对其方式 只有一行中出现高度不同的元素时，才会有视觉上的不同-->
        <attr name="align">
            <!--默认顶部对齐-->
            <enum name="top" value="0" />
            <!--居中对齐-->
            <enum name="center" value="1" />
            <!--底部对齐-->
            <enum name="bottom" value="2" />
        </attr>

        <!--子view之间的统一间距值 横向，可以与子view的margin值叠加-->
        <attr name="gap_horizontal" format="dimension" />
        <!--子view之间的统一间距值 纵向，可以与子view的margin值叠加-->
        <attr name="gap_vertical" format="dimension" />
    </declare-styleable>

    <!--UltraFlowLayout下面的子View属性的设置-->
    <declare-styleable name="UltraFlowLayout_Layout">
        <!--子View自身的对齐方式 优先级高于父布局的align-->
        <attr name="align_self">
            <!--顶部对齐-->
            <enum name="top" value="0" />
            <!--居中对齐-->
            <enum name="center" value="1" />
            <!--底部对齐-->
            <enum name="bottom" value="2" />
            <!--使用父布局的对齐方式 默认-->
            <enum name="inherit" value="-1" />
        </attr>
    </declare-styleable>
</resources>